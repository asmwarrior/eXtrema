clear
defaults
fonts[1]=`SANS'
fonts[2]=`SERIF'
fonts[3]=`MONO'
fonts[4]=`SANS BOLD'
fonts[5]=`SERIF BOLD'
fonts[6]=`MONO BOLD'
fonts[7]=`SANS ITALIC'
fonts[8]=`SERIF ITALIC'
fonts[9]=`MONO ITALIC'

do i=[1:9]
  set font fonts[i]
  set colour black
  @special.pcm
  set cursor -1
  set %xloc 75
  set %yloc 5
  set %textheight 1.5
  set colour -i
  text `Using font '//fonts[i]
  pause
enddo
