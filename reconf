#!/bin/sh
echo " .. cleaning up"
xargs rm -rf <.gitignore

echo " .. autoreconf --install"
autoreconf --install

echo " .. add and congigure a build subdirectory"
mkdir build-linux-x86_64
cd build-linux-x86_64
../configure

echo " .. ready to make; make install"
exit
